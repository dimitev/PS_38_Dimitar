<Window x:Class="StudentInfoSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Login" Height="140" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Username" Margin="5,5,5,5" />
            <TextBox x:Name="txtUsername" Height="23" TextWrapping="Wrap" Text="" Width="210"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Password" Margin="5,5,5,5" Width="64" />
            <TextBox x:Name="txtPassword" Height="23" TextWrapping="Wrap" Text="" Width="210"/>
        </StackPanel>
        <Button x:Name="btnLogin" Content="Log in" Margin="5,5,5,5" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
