<Window x:Class="StudentInfoSystem.FnomSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="FnomSearch" Height="100" Width="320">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
        <Label Content="Student's F.Num: " Margin="5,5,5,5" />
        <TextBox x:Name="txtFNom" Height="23" TextWrapping="Wrap" Text="" Width="178" VerticalAlignment="Top" Margin="5,5,5,5"/>
        
    </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnBack" Content="Back" Width="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="btnBack_Click"/>
            <Button x:Name="btnSearch" Content="Search" Width="75" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnSearch_Click"/>
            <Button x:Name="btnMarks" Content="Marks" Width="75" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnMarks_Click"/>
            
        </StackPanel>
</StackPanel>
</Window>
